<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    tools:viewBindingIgnore="true">
    
    <ImageView
        android:id="@+id/image_vehicleIcon"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/vehicle_placeholder"
        tools:ignore="ContentDescription" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical">
    
        <TextView
            android:id="@+id/text_vehicleName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="Tesla Model 3" />
    
        <TextView
            android:id="@+id/text_vehicleState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white_shade"
            tools:text="last refresh at Today, 14:32" />
    </LinearLayout>
</LinearLayout>